<%- include('./header.ejs') %>

    <h1 class="mt-3">Perfil de <%= usuario.firstName %>
    </h1>

    <div class="container d-flex flex-row flex-wrap mb-3">
        <% if (tasks.length> 0) { %>
            <h2 class="my-4" style="flex-basis: 100%;">Tareas existentes</h2>
            <% tasks.forEach(task=> { %>
                <div class="card m-3" style="width: 18rem; height: 370px;">
                    <div class="card-body d-flex flex-column gap-3">
                        <h5 class="card-title fs-3">
                            <%= task.title %>
                        </h5>
                        <div class="container text-content">
                            <p class="card-text">
                                <%= task.bodyTask %>
                            </p>
                        </div>
                        <a href="/edit-task/<%= task._id %>" class="btn btn-outline-primary mt-auto">Editar</a>
                        <a href="/api/delete-task/<%= task._id %>" class="btn btn-outline-danger mt-auto"
                            onclick="return confirm('Â¿EstÃ¡s seguro que deseas eliminar esta tarea?')">Eliminar</a>
                    </div>
                </div>
                <% }) %>
                    <div class="container">
                        <a href="/new-task" class="btn btn-outline-primary mb-auto">Crear tarea</a>
                    </div>
                    <% } else { %>
                        <h2 class="my-4 mt-auto" style="flex-basis: 100%;">No hay tareas existentes</h2>

                        <a href="/new-task" class="btn btn-outline-primary mb-auto">Crear tarea</a>
                        <% } %>
    </div>

    <h2 class="fs-4">Usuario desde el <%= new Date(usuario.createdAt).toDateString() %>
    </h2>

    <%- include('./footer.ejs') %>