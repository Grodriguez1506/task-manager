<%- include('./header.ejs') %>

<h1 class="text-center my-3">Registrate</h1>

<form id="registerForm" class="col-6">
    <div class="error generalError"></div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" placeholder="Nombre" name="firstName">
        <label for="floatingInput">Nombre</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" placeholder="Apellido" name="lastName">
        <label for="floatingInput">Apellido</label>
    </div>
    <div class="error emailError"></div>
    <div class="form-floating mb-3">
        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
        <label for="floatingInput">Correo electrónico</label>
    </div>
    <div class="error passwordError"></div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" id="floatingPassword" placeholder="Contraseña" name="password">
        <label for="floatingPassword">Contraseña</label>
    </div>
    <div class="error ageError"></div>
    <div class="form-floating mb-3">
        <input type="date" class="form-control" id="floatingInput" placeholder="Fecha de nacimiento" name="dateOfBirth">
        <label for="floatingInput">Fecha de nacimiento</label>
    </div>
    <div class="d-grid gap-2 my-4">
        <button class="btn btn-outline-primary" type="submit">Registrarte</button>
    </div>
</form>

<!-- CUSTOM JS -->
<%- include('./footer.ejs') %>